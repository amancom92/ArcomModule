@model ProjectConsultants.UI.ViewModel.LoginViewModel

@{
    Layout = null;
}
@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/UserDefinedCss")

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <img src="~/Content/Images/logo.png" id="imageAlignment" />
            </div>
        </div>
    </div>
    <div class="container-fluid" id="loginHeaderBlock">
        <div class="row">
            <div class="col-sm-12">
                <div id="loginpageTitle"><b>User Log In</b></div>
            </div>
        </div>
    </div>
    <div class="container center-form">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div id="loginFormBorder">
                <div class="row">
                    <div class="col-sm-12">
                        <div id="loginTitle"><span id="loginHeading">ARCOM One Account</span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 loginHeadingSpace">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control fieldPadding", placeholder = "User Name*", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 textFieldSpace">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control fieldPadding", placeholder = "Password*" } })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 buttonSpace center-block">
                        <button type="submit" class="btn btn-default buttonStyle center-block">Sign In</button>
                        @ViewBag.Message
                    </div>
                </div>
            </div><!-- loginFormBorder -->
        }
    </div>
    <div class="container informationTextPadding">
        <div class="row textPosition">
            <div class="col-sm-12">
                <div><span class="accountText">Can't access your account? </span><span class="infoText"><a href="#">Password reminder</a></span></div>
            </div>
        </div>
        <div class="row textPosition">
            <div class="col-sm-12">
                <div><span class="accountText">Don't have an ARCOM One Account?</span><span class="infoText">@Html.ActionLink("Sign Up Now", "Register", "User")</span></div><div></div>
            </div>
        </div>
    </div>
</body>
</html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")