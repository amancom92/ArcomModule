@model ProjectConsultants.UI.ViewModel.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/UserDefinedCss")
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <img src="~/Content/Images/logo.png" id="imageAlignment" />
            </div>
        </div>
    </div>
    <div class="container-fluid" id="forgotPasswordHeader">
        <div class="row">
            <div class="col-sm-12">
                <div id="forgotPasswordTitle"><b>Forgot Password</b></div>
            </div>
        </div>
    </div>
    <div class="container center-form">
        @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
        {
            <div id="forgotPasswordBorder">
                <div class="row">
                    <div class="col-sm-12">
                        <div id="forgotpasswordTitle"><span id="forgotpasswordHeading">Forgot Password</span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 loginHeadingSpace">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control fieldPadding", placeholder = "User Name*", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 textFieldSpace">
                        @*@*@Html.DropDownListFor(m => m.SecurityQuestionId, Model.SecurityQuestionList, "Security Question", new { @class = "form-field-css" })*@*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 textFieldSpace">
                        @*@Html.EditorFor(model => model.SecurityQuestionAnswer, new { htmlAttributes = new { @class = "form-field-css", placeholder = "Answer*" } })*@
                        @Html.ValidationMessageFor(model => model.SecurityQuestionAnswer, null, new { @class = "ValidationMessage" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 buttonSpace center-block">
                        <button type="submit" class="btn btn-default buttonStyle center-block">Submit</button>
                        
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
